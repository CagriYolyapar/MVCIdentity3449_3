@model AssignRolePageVm

<form method="post" class="p-3 w-75 m-auto">

    <input type="hidden" asp-for="UserId" />


     @*Bilerek for kullanıyoruz, foreach kullanmayın yoksa rollerin id'sini yakalayamazsınız*@

    <div class="list-group">
        @for (int i = 0; i < Model.Roles.Count; i++)
            {
                <input type="hidden" asp-for="Roles[i].RoleName" />

                <label>
                    <input  class="form-check-input" asp-for="Roles[i].IsChecked"/> @Model.Roles[i].RoleName
                 </label>
            }

    @*     @foreach (var item in Model.Roles)
        {
             <input type="hidden" asp-for="@item.RoleName" />

             <label>
                 <input class="form-check-input" asp-for="@item.IsChecked" /> @item.RoleName
             </label>
        } *@
    </div>

    <div class="mb-3">
        <button class="btn btn-primary">Kaydet</button>
    </div>


</form>